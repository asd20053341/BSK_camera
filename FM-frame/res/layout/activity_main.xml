<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mbg"
    android:orientation="horizontal"
    tools:ignore="MergeRootFrame">


    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="9"
    	android:background="#ffffff"
        >
        
        <View 
            android:layout_width="1dp"
		        android:layout_height="match_parent"
		        android:background="@color/line"
		        android:layout_alignParentRight="true"
                />
        
        <ImageView 
            android:id="@+id/anim_iv"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_alignParentTop="true"
    		android:src="@drawable/logo"
    		android:layout_marginTop="14dp"
    		android:layout_centerHorizontal="true"
            />
        
        
        <View 
            android:id="@+id/line_view"
            android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:layout_below="@id/anim_iv"
		    android:layout_marginTop="10dp"
		    android:background="@color/line"
            />
        
        
        <LinearLayout 
            android:id="@+id/tab_ly"
            android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/line_view"
		    android:layout_marginRight="1dp"
		    android:background="@drawable/list_bg"
		    android:orientation="horizontal"
            >
            
            <Button 
			    android:id="@+id/favorite_btn"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:paddingTop="12dp"
			    android:paddingBottom="16dp"
			    android:text="@string/favorite"
			    android:textSize="26sp"
			    android:textColor="#333333"
			    android:background="#00000000">
			</Button>
			
            <Button 
			    android:id="@+id/list_btn"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:paddingTop="12dp"
			    android:paddingBottom="16dp"
			    android:text="@string/list"
			    android:textSize="26sp"
			    android:textColor="@color/blue"
			    android:background="#00000000">
			</Button>
            
        </LinearLayout>
        
        
            
            <Button 
			    android:id="@+id/search_btn"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentBottom="true"
			    android:layout_centerHorizontal="true"
			    android:paddingTop="8dp"
			    android:paddingBottom="12dp"
			    android:text="@string/freq_search"
			    android:textSize="26sp"
			    android:textColor="@android:color/white"
			    android:background="@drawable/search_bg">
			  </Button>
			  
     		<ListView 
	            android:id="@+id/freq_listview"
	            android:layout_width="match_parent"
	        	android:layout_height="match_parent"
	        	android:layout_above="@id/search_btn"
	        	android:layout_below="@id/tab_ly"
	        	android:cacheColorHint="@android:color/transparent"
	        	android:divider="#00000000"
	        	android:background="#00000000"
            >
        	</ListView>     
        	
     		<ListView 
	            android:id="@+id/favor_listview"
	            android:layout_width="match_parent"
	        	android:layout_height="match_parent"
	        	android:layout_above="@id/search_btn"
	        	android:layout_below="@id/tab_ly"
	        	android:cacheColorHint="@android:color/transparent"
	        	android:divider="#00000000"
	        	android:background="#00000000"
	        	android:visibility="gone"
            >
        	</ListView>
        
    </RelativeLayout>
    
	<RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="3"
        >
        
        <ImageView 
            android:id="@+id/arrow_iv"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_alignParentTop="true"
    		android:layout_centerHorizontal="true"
    		android:layout_marginTop="16dp"
    		android:src="@drawable/arrow"
            />
        
        <Button
            android:id="@+id/up_btn" 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_alignParentTop="true"
    		android:layout_alignParentLeft="true"
    		android:layout_marginLeft="93dp"
    		android:layout_marginTop="244dp"
    		android:background="@drawable/left"
            />
        
        <Button 
            android:id="@+id/down_btn"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_centerVertical="true"
    		android:layout_alignParentTop="true"
    		android:layout_alignParentRight="true"
    		android:layout_marginRight="93dp"
    		android:layout_marginTop="244dp"
    		android:background="@drawable/right"
            />
        
        <Button 
            android:id="@+id/dec_btn"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_alignParentLeft="true"
    		android:layout_alignParentBottom="true"
    		android:layout_marginLeft="157dp"
    		android:layout_marginBottom="94dp"
    		android:background="@drawable/minus"
            />
        
        <Button 
            android:id="@+id/inc_btn"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_alignParentRight="true"
    		android:layout_alignParentBottom="true"
    		android:layout_marginRight="157dp"
    		android:layout_marginBottom="94dp"
    		android:background="@drawable/add"
            />
        
        <Button 
            android:id="@+id/power_btn"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_centerHorizontal="true"
    		android:layout_alignParentBottom="true"
    		android:layout_marginBottom="16dp"
    		android:background="@drawable/power_off"
            />
        
        <Button 
            android:id="@+id/favor_btn"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_centerHorizontal="true"
    		android:layout_alignParentBottom="true"
    		android:layout_marginBottom="180dp"
    		android:background="@drawable/favor"
            />
        
        <LinearLayout 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_alignParentTop="true"
    		android:layout_centerHorizontal="true"
    		android:layout_marginTop="188dp"
    		android:orientation="horizontal"
            >
            
            <TextView 
                android:id="@+id/freq_tv"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:paddingLeft="8dp"
	    		android:text="108.0"
	    		android:textSize="112px"
	    		android:textColor="@android:color/white"
	            />
            
            <TextView 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:paddingLeft="16dp"
	    		android:gravity="center"
	    		android:text="@string/fm_tune_unit"
	    		android:textSize="34sp"
	    		android:textColor="@android:color/white"
	            />
            
        </LinearLayout>
        
        
        
    </RelativeLayout>
    
</LinearLayout>